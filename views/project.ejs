<%- include('partials/header.ejs') -%>

<form class="project-hamburgerMenu" action="/" method="get">
    <div class="project-backgroundCircle"></div>
    <img class="project-back-icon" src="https://github.com/ngaraug/portfolio/blob/main/Icons/icons8-left-arrow-48.png?raw=true" alt="">
</form>
</div>  
